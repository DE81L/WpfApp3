<Window x:Class="WpfApp3.AddDrugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Drug" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="NameTextBox" Text="Name" Margin="0,0,0,10"/>
            <TextBox x:Name="GroupTextBox" Text="Group" Margin="0,0,0,10"/>
            <TextBox x:Name="DosageTextBox" Text="Dosage" Margin="0,0,0,10"/>
            <TextBox x:Name="ShelfLifeTextBox" Text="Shelf Life (days)" Margin="0,0,0,10"/>
            <Button Content="Add" Click="AddButton_Click" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
