<Window x:Class="WpfApp3.AddPharmacyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Pharmacy" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="NameTextBox" Text="Name" Margin="0,0,0,10"/>
            <TextBox x:Name="AddressTextBox" Text="Address" Margin="0,0,0,10"/>
            <TextBox x:Name="StartHourTextBox" Text="Start Hour (0-24)" Margin="0,0,0,10"/>
            <TextBox x:Name="EndHourTextBox" Text="End Hour (0-24)" Margin="0,0,0,10"/>
            <Button Content="Add" Click="AddButton_Click" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
