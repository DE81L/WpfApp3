<Window x:Class="WpfApp3.AddDrugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="AddDrugWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="NameTextBox" Text="Name"/>
            <TextBox x:Name="GroupTextBox" Text="Group"/>
            <TextBox x:Name="DosageTextBox" Text="Dosage"/>
            <TextBox x:Name="ShelfLifeTextBox" Text="Shelf Life"/>
            <Button Content="Add" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
