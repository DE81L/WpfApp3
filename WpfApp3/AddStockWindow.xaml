<Window x:Class="WpfApp3.AddStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Stock" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="PharmacyIdTextBox" Text="Pharmacy ID" Margin="0,0,0,10"/>
            <TextBox x:Name="DrugIdTextBox" Text="Drug ID" Margin="0,0,0,10"/>
            <TextBox x:Name="ReleaseDateTextBox" Text="Release Date (yyyy-MM-dd)" Margin="0,0,0,10"/>
            <TextBox x:Name="QuantityTextBox" Text="Quantity" Margin="0,0,0,10"/>
            <TextBox x:Name="PriceTextBox" Text="Price" Margin="0,0,0,10"/>
            <Button Content="Add" Click="AddButton_Click" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
